{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020", "DOM"],

    "rootDir": "./src",
    "outDir": "./dist",

    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "dev", "examples"]
}
